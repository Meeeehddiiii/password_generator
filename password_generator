import string
import secrets

def generate_password(length=8, use_digits=True, use_specials=True):
    """ GÃ©nÃ¨re un mot de passe sÃ©curisÃ© selon les options choisies """
    chars = string.ascii_letters
    if use_digits:
        chars += string.digits
    if use_specials:
        chars += string.punctuation

    return ''.join(secrets.choice(chars) for _ in range(length))

def chat():
    """ Interface interactive pour gÃ©nÃ©rer un mot de passe """
    print("ğŸ” Bienvenue dans le gÃ©nÃ©rateur de mots de passe interactif !")
    while True:
        try:
            length = int(input("ğŸ”¢ Quelle longueur pour le mot de passe ? (min 4) : "))
            if length < 4:
                print("âš ï¸ La longueur minimale est de 4 caractÃ¨res.")
                continue

            use_digits = input("ğŸ”¢ Inclure des chiffres ? (oui/non) : ").strip().lower() == "oui"
            use_specials = input("ğŸ”£ Inclure des caractÃ¨res spÃ©ciaux ? (oui/non) : ").strip().lower() == "oui"

            password = generate_password(length, use_digits, use_specials)
            print(f"âœ… Mot de passe gÃ©nÃ©rÃ© : {password}")

            retry = input("ğŸ”„ GÃ©nÃ©rer un autre mot de passe ? (oui/non) : ").strip().lower()
            if retry != "oui":
                print("ğŸ‘‹ Merci d'avoir utilisÃ© le gÃ©nÃ©rateur de mot de passe !")
                break
        except ValueError:
            print("âŒ EntrÃ©e invalide, veuillez entrer un nombre pour la longueur.")

if __name__ == "__main__":
    chat()
